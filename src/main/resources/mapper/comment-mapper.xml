<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="Comment">

    <insert id="save" parameterType="comment" >
        insert into comment_table(commentWriter,commentContents, boardId,memberId)
        values (#{commentWriter},#{commentContents},#{boardId},#{memberId})
    </insert>

    <select id="findAll" parameterType="Long" resultType="comment">
        select * from comment_table where boardId =#{boardId} order by id desc
    </select>

<!--    <select id="findById" parameterType="Long" resultType="comment">-->
<!--        select * from comment_table where id=#{id}-->
<!--    </select>-->
<!--    <delete id="delete" parameterType="comment">-->
<!--        delete from comment_table where memberId =#{memberId}-->
<!--    </delete>-->

    <delete id="delete" parameterType="Long">
        delete from comment_table where id = #{id}
    </delete>
</mapper>